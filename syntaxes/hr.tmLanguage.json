{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HR",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include" :"#comments"
		},
		{
			"include" :"#sections"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.hr",
				"match": "\\b(variables|tasks)\\b"
			}
			]
		},
		"strings": {
			"patterns": [{
				"name": "string.quoted.double.hr",
				"begin": "\"",
				"end": "\"",
				"patterns": [
					{
						"name": "constant.character.escape.hr",
						"match": "\\\\."
					}
				]},{
				"name": "string.quoted.single.hr",
				"begin": "'",
				"end": "'",
				"patterns": [
					{
						"name": "constant.character.escape.hr",
						"match": "\\."
					}
				]}
			]
		},
		"comments" : {
			"patterns": [{
				"name": "comment.line.number-sign.hr",
				"match": "^(?:\\s)*#[^\n]*"
			}]
		},
		"sections" :{
			"patterns":[{
				"name": "entity.name.section.hr",
				"begin":"variables|tasks",
				"end" :"variables|tasks",
				"patterns": [
					{
					"match" : "^(?:\\s)*(\\w+)\\s*=\\s*([^\\n]+)",
					"captures" : {
						"1" : {"name" : "support.function.hr"},
						"2" : {"name" : "variable.parameter.hr"}
					}
					},
					{"include": "#comments"},
					{"include": "#strings"}
				]		
			}
			]
		}
	},
	"scopeName": "source.hr"
}